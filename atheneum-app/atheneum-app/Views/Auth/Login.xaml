<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atheneum_app.Views.Auth.Login"
             Style="{StaticResource PageStyle}">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label
                    Text="Welcome Back"></Label>
                <Label
                    Text="Please log in!"></Label>
                
                <StackLayout>
                    <Entry
                        Placeholder="Email Address"></Entry>
                    <Entry
                        Placeholder="Password"></Entry>
                </StackLayout>
                
                <Label
                    Text="Forgot Password?"></Label>
            </StackLayout>
                
            <Label
                Text="Dont have an account? Sign Up!"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
