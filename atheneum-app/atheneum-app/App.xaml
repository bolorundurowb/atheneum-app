<?xml version="1.0" encoding="utf-8"?>

<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="atheneum_app.App">
    <Application.Resources>
        <Color x:Key="DarkColour">#12140C</Color>
        <Color x:Key="PrimaryColour">#800020</Color>
        <Color x:Key="PrimaryTextColour">#F5F5F3</Color>
        <Color x:Key="InputBackgroundColour">#E5E5E2</Color>
        
        <Style x:Key="PageStyle" TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="#12140C" />
            <Setter Property="NavigationPage.HasNavigationBar" Value="False" />
        </Style>
    </Application.Resources>
</Application>
