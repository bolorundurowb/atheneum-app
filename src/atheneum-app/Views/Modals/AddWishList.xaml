<?xml version="1.0" encoding="utf-8"?>

<xct:Popup
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:Class="AtheneumApp.Views.Modals.AddWishList"
    Style="{StaticResource ModalStyle}">
    <Frame
        Style="{StaticResource ModalFrmStyle}">
        <StackLayout>
            <Label
                Text="Add To Wish List"
                Style="{StaticResource ModalHdrStyle}" />
            <Frame
                Style="{StaticResource EntryFrameStyle}">
                <Entry
                    x:Name="txtTitle"
                    Placeholder="book title"
                    Keyboard="Text"
                    IsTextPredictionEnabled="True"
                    Style="{StaticResource EntryStyle}" />
            </Frame>
            <Frame
                Style="{StaticResource EntryFrameStyle}">
                <Entry
                    x:Name="txtAuthor"
                    Placeholder="author name"
                    Keyboard="Text"
                    IsTextPredictionEnabled="True"
                    Style="{StaticResource EntryStyle}" />
            </Frame>
            <Frame
                Style="{StaticResource EntryFrameStyle}">
                <Entry
                    x:Name="txtIsbn"
                    MaxLength="13"
                    Keyboard="Numeric"
                    Placeholder="isbn"
                    IsTextPredictionEnabled="True"
                    Style="{StaticResource EntryStyle}" />
            </Frame>

            <StackLayout
                x:Name="stkBtns"
                Orientation="Horizontal">
                <Button
                    Text="Cancel"
                    Margin="0, 12, 5, 0"
                    Style="{StaticResource BaseInvBtnStyle}"
                    Clicked="Cancel"/>
                
                <Button
                    Text="Add To List"
                    Margin="5, 12, 0, 0"
                    Style="{StaticResource BaseBtnStyle}"
                    Clicked="Add"/>
            </StackLayout>

            <ActivityIndicator
                x:Name="prgAdding"
                IsVisible="False"
                Style="{StaticResource BasePrgStyle}" />
        </StackLayout>
    </Frame>
</xct:Popup>