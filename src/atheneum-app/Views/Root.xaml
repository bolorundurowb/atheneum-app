<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:extensions="clr-namespace:AtheneumApp.Utils.Extensions;assembly=atheneum-app"
    xmlns:core="clr-namespace:AtheneumApp.Views.Core;assembly=atheneum-app"
    x:Class="AtheneumApp.Views.Root"
    Padding="0"
    Style="{StaticResource PageStyle}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="NavbarBackgroundStyle" TargetType="BoxView">
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="Margin" Value="10, 0, 10, 5" />
                <Setter Property="Color"
                        Value="{AppThemeBinding Dark={StaticResource DarkNavbarBackgroundColour}, Light={StaticResource LightNavbarBackgroundColour}}" />
            </Style>

            <Style x:Key="NavbarStyle" TargetType="xct:TabView">
                <Setter Property="TabStripHeight" Value="80" />
                <Setter Property="IsSwipeEnabled" Value="False" />
                <Setter Property="TabStripPlacement" Value="Bottom" />
                <Setter Property="TabStripBackgroundColor" Value="Transparent" />
                <Setter Property="TabContentBackgroundColor" Value="Transparent" />
            </Style>

            <ControlTemplate
                x:Key="TabItemTemplate">
                <Grid
                    Margin="0, 10, 0, 20"
                    RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        WidthRequest="24"
                        HeightRequest="24"
                        Margin="6"
                        Source="{TemplateBinding CurrentIcon}" />
                    <Label
                        Grid.Row="1"
                        HorizontalOptions="Center"
                        FontSize="14"
                        Text="{TemplateBinding Text}"
                        FontFamily="ProximaBold"
                        TextTransform="Lowercase"
                        TextColor="{TemplateBinding CurrentTextColor}" />
                </Grid>
            </ControlTemplate>

            <ControlTemplate x:Key="FabTabItemTemplate">
                <Grid>
                    <ImageButton
                        Margin="6, 0, 6, 6"
                        Padding="10"
                        BackgroundColor="{StaticResource TertiaryAccentColour}"
                        CornerRadius="16"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        InputTransparent="True"
                        Source="{TemplateBinding CurrentIcon}"
                        VerticalOptions="Center"
                        WidthRequest="50" />
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <xct:TabView Style="{StaticResource NavbarStyle}">
                <xct:TabView.TabStripBackgroundView>
                    <BoxView Style="{StaticResource NavbarBackgroundStyle}" />
                </xct:TabView.TabStripBackgroundView>

                <xct:TabViewItem
                    Text="Home"
                    ControlTemplate="{StaticResource TabItemTemplate}"
                    Icon="{extensions:IconSourceExtensions home}"
                    IconSelected="{AppThemeBinding Dark={extensions:IconSourceExtensions home_dark_active}, Light={extensions:IconSourceExtensions home_light_active}}"
                    TextColor="{AppThemeBinding Dark={StaticResource NavbarTextColour}, Light={StaticResource NavbarTextColour}}"
                    TextColorSelected="{AppThemeBinding Dark={StaticResource DarkNavbarActiveTextColour}, Light={StaticResource LightNavbarActiveTextColour}}">
                    <xct:TabViewItem.Content>
                        <core:Home x:Name="pageHome" />
                    </xct:TabViewItem.Content>
                </xct:TabViewItem>

                <xct:TabViewItem
                    Text="Library"
                    ControlTemplate="{StaticResource TabItemTemplate}"
                    Icon="{extensions:IconSourceExtensions books}"
                    IconSelected="{AppThemeBinding Dark={extensions:IconSourceExtensions books_dark_active}, Light={extensions:IconSourceExtensions books_light_active}}"
                    TextColor="{AppThemeBinding Dark={StaticResource NavbarTextColour}, Light={StaticResource NavbarTextColour}}"
                    TextColorSelected="{AppThemeBinding Dark={StaticResource DarkNavbarActiveTextColour}, Light={StaticResource LightNavbarActiveTextColour}}">
                    <xct:TabViewItem.Content>
                        <core:Library x:Name="pageLibrary" />
                    </xct:TabViewItem.Content>
                </xct:TabViewItem>

                <xct:TabViewItem
                    Icon="{extensions:IconSourceExtensions add}"
                    ControlTemplate="{StaticResource FabTabItemTemplate}"
                    TabTapped="ShowOptions"/>

                <xct:TabViewItem
                    Text="WishList"
                    ControlTemplate="{StaticResource TabItemTemplate}"
                    Icon="{extensions:IconSourceExtensions wishlist}"
                    IconSelected="{AppThemeBinding Dark={extensions:IconSourceExtensions wishlist_dark_active}, Light={extensions:IconSourceExtensions wishlist_light_active}}"
                    TextColor="{AppThemeBinding Dark={StaticResource NavbarTextColour}, Light={StaticResource NavbarTextColour}}"
                    TextColorSelected="{AppThemeBinding Dark={StaticResource DarkNavbarActiveTextColour}, Light={StaticResource LightNavbarActiveTextColour}}">
                    <xct:TabViewItem.Content>
                        <core:WishList x:Name="pageWishList" />
                    </xct:TabViewItem.Content>
                </xct:TabViewItem>

                <xct:TabViewItem
                    Text="Profile"
                    ControlTemplate="{StaticResource TabItemTemplate}"
                    Icon="{extensions:IconSourceExtensions profile}"
                    IconSelected="{AppThemeBinding Dark={extensions:IconSourceExtensions profile_dark_active}, Light={extensions:IconSourceExtensions profile_light_active}}"
                    TextColor="{AppThemeBinding Dark={StaticResource NavbarTextColour}, Light={StaticResource NavbarTextColour}}"
                    TextColorSelected="{AppThemeBinding Dark={StaticResource DarkNavbarActiveTextColour}, Light={StaticResource LightNavbarActiveTextColour}}">
                    <xct:TabViewItem.Content>
                        <core:Profile x:Name="pageProfile" />
                    </xct:TabViewItem.Content>
                </xct:TabViewItem>
            </xct:TabView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
