<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="DarkTheme" parent="MainTheme">
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:windowLightNavigationBar">false</item>
    <item name="android:windowBackground">#111111</item>
    <item name="android:colorPrimaryDark">#111111</item>
  </style>
  
  <style name="LightTheme" parent="MainTheme">
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar">true</item>
    <item name="android:windowBackground">#FEFEFE</item>
    <item name="android:colorPrimaryDark">#FEFEFE</item>
  </style>
  
  <style name="SplashDarkTheme" parent="SplashTheme.Base">
    <item name="android:windowBackground">@drawable/splash_screen_dark</item>
  </style>
  
  <style name="SplashLightTheme" parent="SplashTheme.Base">
    <item name="android:windowBackground">@drawable/splash_screen_light</item>
  </style>
</resources>
